// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "'Source Code Pro', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 13,
  "files.autoSave": "off",
  "terminal.integrated.fontSize": 13,
  "editor.rulers": [80, 120, 132],
  "editor.wordWrap": "on",
  "workbench.iconTheme": "material-icon-theme",
  "window.zoomLevel": -0.25,
  "editor.tabSize": 2,
  "editor.lineNumbers": "on",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "search.exclude": {
    "**/.*.un~": true,
    "**/.m2": true,
    "**/*.orig": true,
    "**/bower_components": true,
    "**/node_modules": true,
    "**/target": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.*un~": true,
    "**/*.orig": true,
    "**/*.retry": true
  },
  "files.associations": {
    "*.proxy": "apacheconf",
    "*.jag": "mason",
    "*.md": "markdown",
    "*.asm": "kickassembler"
  },
  "editor.renderWhitespace": "none",
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": true,
  "editor.wordWrapColumn": 132,
  "workbench.startupEditor": "newUntitledFile",
  "trailing-spaces.highlightCurrentLine": false,
  "editor.renderLineHighlight": "gutter",
  "[javascriptreact]": {

  },
  "terminal.external.osxExec": "iTerm.app",
  "editor.formatOnType": true,
  "tslint.run": "onType",
  "extensions.ignoreRecommendations": false,
  "[kickassembler]": {
    "editor.tabSize": 8
    // "editor.cursorStyle": "block",
    // "editor.cursorBlinking": "smooth",
    // "editor.fontFamily": "C64 Pro Mono",
    // "editor.fontSize": 10
  },
  "editor.detectIndentation": true,
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.renderWhitespace": "boundary"
  },
  "search.useIgnoreFiles": true,
  "explorer.openEditors.visible": 0,
  "git.confirmSync": false,
  "editor.autoIndent": false,
  "gitProjectManager.baseProjectsFolders": [
    "~/dev/dso/src"
  ],
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.keymap": "chorded",
  // see https://code.visualstudio.com/docs/getstarted/theme-color-reference
  "workbench.colorCustomizations" : {
    "terminal.foreground" : "#c5c8c6",
    "terminal.background" : "#333333"
},
"gitlens.advanced.messages": {
  "suppressCommitHasNoPreviousCommitWarning": false,
  "suppressCommitNotFoundWarning": false,
  "suppressFileNotUnderSourceControlWarning": false,
  "suppressGitVersionWarning": false,
  "suppressLineUncommittedWarning": false,
  "suppressNoRepositoryWarning": false,
  "suppressResultsExplorerNotice": false,
  "suppressShowKeyBindingsNotice": true
},
"[yaml]": {
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.autoIndent": true
},
"yaml.format.enable": true,
"explorer.confirmDragAndDrop": false,
"workbench.statusBar.feedback.visible": false,
"workbench.sideBar.location": "left",
"editor.renderControlCharacters": true,
"breadcrumbs.enabled": true,
"explorer.decorations.badges": false,
"workbench.colorTheme": "One Dark Pro",
"workbench.editor.highlightModifiedTabs": true,
"gitlens.views.repositories.files.layout": "auto",
"gitlens.views.fileHistory.enabled": false,
"gitlens.views.lineHistory.enabled": false
}